pipeline {
  agent any

  environment {
    VPS_HOST = '161.97.76.223'
  }

  stages {
    stage('SSH vers le VPS') {
      steps {
        sshagent(['vps-ssh-key']) {
          sh """
            echo "✅ Connexion SSH à ton VPS..."
            ssh -o StrictHostKeyChecking=no root@${VPS_HOST} "echo '🎉 Hello depuis le pipeline Jenkins !'; hostname; uptime"
          """
        }
      }
    }
  }

  post {
    success {
      echo '🚀 Connexion SSH réussie !'
    }
    failure {
      echo '❌ Échec de la connexion SSH.'
    }
  }
}
